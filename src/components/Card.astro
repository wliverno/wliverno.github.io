<div class="card">
    <slot />
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const cards = document.querySelectorAll('.card');
        
        cards.forEach(card => {
            const moleculeContainer = card.querySelector('.molecule-container');
            if (moleculeContainer) {
                card.classList.add('has-molecule');
                
                // Create content wrapper for non-molecule content
                const allChildren = Array.from(card.children);
                const moleculeElement = allChildren.find(child => 
                    child.classList.contains('molecule-container')
                );
                
                if (moleculeElement) {
                    const contentWrapper = document.createElement('div');
                    contentWrapper.classList.add('content-wrapper');
                    
                    // Move all non-molecule content to wrapper
                    allChildren.forEach(child => {
                        if (!child.classList.contains('molecule-container')) {
                            contentWrapper.appendChild(child);
                        }
                    });
                    
                    // Insert content wrapper before molecule
                    card.insertBefore(contentWrapper, moleculeElement);
                }
            }
        });
    });
</script>

<style>
    .card {
        background: rgba(173, 216, 230, 0.9);
        border: 1px solid #000000;
        box-shadow: 0px 0px 1rem .2rem rgba(0, 0, 0, 0.5);
        border-radius: .5rem;
        backdrop-filter: blur(5px);
        padding: 1.5rem;
        margin: 0;
        margin-bottom: 2rem;
        width: 100%;
        max-width: 100%;
        box-sizing: border-box;
        overflow-wrap: break-word;
        word-wrap: break-word;
    }

    .card.has-molecule {
        display: grid;
        grid-template-columns: 1fr auto;
        gap: 2rem;
        align-items: start;
    }

    .content-wrapper {
        min-width: 0;
        word-wrap: break-word;
        overflow-wrap: break-word;
    }
    a{
		background: linear-gradient(180deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.2) 50%, rgba(255, 255, 255, 0) 50%, rgba(255, 255, 255, 0) 100%), linear-gradient(180deg, #008000 0%, #90EE90 100%);
		box-shadow: 0px 0px .5rem .1rem rgba(0, 0, 0, 0.5);
		border-radius: 100em;
		padding: .1rem 2rem;
		margin: 0;
		font-style: normal;
		font-weight: 400;
		font-size: 2rem;
		display: inline-block;
		text-align: center;
		text-decoration: none;
		color: #FFFFFF;
		border: 1px solid 999;
		text-shadow: 0px 0px .3rem rgba(0, 0, 0, 0.7);
	}
	a:hover{
		background: linear-gradient(0deg, rgba(255, 255, 255, 0) 0%, #FFFFFF 100%), linear-gradient(180deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.2) 50%, rgba(255, 255, 255, 0) 50%, rgba(255, 255, 255, 0) 100%), linear-gradient(180deg, #008000 0%, #90EE90 100%);
	}

    @media (max-width: 768px) {
        .card {
            padding: 1rem;
            gap: 0;
        }
        
        .card.has-molecule {
            display: block;
        }
    }

    @media (max-width: 480px) {
        .card {
            padding: 0.75rem;
            margin-left: 0;
            margin-right: 0;
        }
    }
</style>