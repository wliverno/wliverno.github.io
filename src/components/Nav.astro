---
import Button from './Button.astro';
// Add client-side script
---

<nav class="nav-container">
    <div class="nav-content">
        <Button href="/" class="nav-button">Home</Button>
        <Button href="/projects" class="nav-button">Projects</Button>
        <Button href="/publications" class="nav-button">Publications</Button>
        <Button href="/advocacy" class="nav-button">Advocacy</Button>
    </div>
    <button class="mobile-menu-toggle" aria-label="Toggle navigation menu">
        <span class="hamburger">
            <span></span>
            <span></span>
            <span></span>
        </span>
    </button>
</nav>

<script>
    const mobileMenuToggle = document.querySelector('.mobile-menu-toggle');
    const navContainer = document.querySelector('.nav-container');

    mobileMenuToggle?.addEventListener('click', () => {
        navContainer?.classList.toggle('active');
        mobileMenuToggle?.classList.toggle('active');
    });
</script>

<style>
    .nav-container {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 10;
        width: 100%;
        background: rgba(173, 216, 230, 0.9);
        border-bottom: 1px solid #000000;
        box-shadow: 0px 0px 1rem .2rem rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(5px);
        transition: transform 0.3s ease;
    }

    .nav-content {
        display: flex;
        justify-content: center;
        padding: .5rem 0;
        gap: 1rem;
    }

    :global(.nav-button) {
        width: 13rem;
        margin: 0;
        padding: .1rem 1rem;
        font-size: 2rem;
    }

    .mobile-menu-toggle {
        display: none;
    }

    button.mobile-menu-toggle {
        all: unset;
        position: absolute;
        right: 1rem;
        bottom: -4rem;
        width: 3rem;
        height: 3rem;
        background: linear-gradient(180deg, rgba(255, 255, 255, 0.8) 0%, rgba(255, 255, 255, 0.2) 50%, rgba(255, 255, 255, 0) 50%, rgba(255, 255, 255, 0) 100%), linear-gradient(180deg, #008000 0%, #90EE90 100%);
        box-shadow: 0px 0px .5rem .1rem rgba(0, 0, 0, 0.5);
        border-radius: 50%;
        border: 1px solid #999;
        cursor: pointer;
        z-index: 20;
        display: none;
        align-items: center;
        justify-content: center;
        text-shadow: 0px 0px .3rem rgba(0, 0, 0, 0.5);
    }

    .hamburger {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        width: 18px;
        height: 14px;
    }

    .hamburger span {
        display: block;
        width: 100%;
        height: 2px;
        background: #FFFFFF;
        transition: all 0.3s ease;
        box-shadow: 0px 0px .2rem rgba(0, 0, 0, 0.7);
    }

    .mobile-menu-toggle.active .hamburger span:nth-child(1) {
        transform: translateY(6px) rotate(45deg);
    }

    .mobile-menu-toggle.active .hamburger span:nth-child(2) {
        opacity: 0;
    }

    .mobile-menu-toggle.active .hamburger span:nth-child(3) {
        transform: translateY(-6px) rotate(-45deg);
    }

    @media (max-width: 768px) {
        .nav-container {
            transform: translateY(-100%);
        }

        .nav-container.active {
            transform: translateY(0);
        }

        .nav-content {
            flex-direction: column;
            align-items: center;
            padding: 1rem;
            gap: 0.5rem;
        }

        .mobile-menu-toggle {
            display: flex !important;
        }

        :global(.nav-button) {
            margin: 0;
        }
    }
</style>
