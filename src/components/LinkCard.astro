---
import Card from './Card.astro';
import Button from './Button.astro';
import { getPageMetadata } from '../lib/metadata';

interface Props {
    title?: string;
    url: string;
}

const { title: providedTitle, url } = Astro.props;

// Get metadata from the URL
const metadata = await getPageMetadata(url);
const title = providedTitle || metadata.title;
---

<Card>
    <div class="link-card">
        <div class="content">
            <div class="site-info">
                <span class="site-name">{metadata.siteName}</span>
            </div>
            <h3>{title}</h3>
            {metadata.description && 
                <p class="description">{metadata.description}</p>
            }
            <Button href={url} target="_blank" rel="noopener noreferrer" class="link-card-button">
                Read More
            </Button>
        </div>
        {metadata.image && 
            <div class="image-container">
                <img src={metadata.image} alt={title} />
            </div>
        }
    </div>
</Card>

<style>
    .link-card {
        display: flex;
        justify-content: space-between;
        align-items: start;
        gap: 2rem;
    }

    .content {
        flex: 1;
        min-width: 0; /* Prevents flex item from overflowing */
        word-wrap: break-word;
        overflow-wrap: break-word;
    }

    .site-info {
        margin-bottom: 0.5rem;
    }

    .site-name {
        color: #666;
        font-size: 1.2rem;
    }

    h3 {
        margin: 0 0 1rem 0;
		font-family: 'Raleway Variable', sans-serif;
        word-wrap: break-word;
    }

    :global(.link-card-button) {
        font-size: 1.5rem !important;
        padding: .1rem 2rem !important;
    }

    .description {
        margin: 0 0 1.5rem 0;
        color: #444;
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
        word-wrap: break-word;
        overflow-wrap: break-word;
    }

    .image-container {
        width: 200px;
        height: 150px;
        flex-shrink: 0;
        overflow: hidden;
        border-radius: 0.5rem;
        margin: auto 0;
    }

    .image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    @media (max-width: 768px) {
        .link-card {
            flex-direction: column-reverse;
            gap: 1rem;
        }

        .content {
            width: 100%;
        }

        .image-container {
            width: 100%;
            height: 150px;
            max-width: 100%;
        }

        .description {
            -webkit-line-clamp: 2;
        }

        h3 {
            font-size: 1.2rem;
        }

        :global(.link-card-button) {
            text-align: center;
        }
    }
</style> 